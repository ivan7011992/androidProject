<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/RelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fon15"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <TextView
            android:id="@+id/headerRegistr"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:text="Регистрация"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="20sp"
            />


        <EditText
            android:id="@+id/kod"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/headerRegistr"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:background="@drawable/dra4"
            android:textColorHint="#FFFFFF"
            android:gravity="center"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:hint="@string/kod"
            />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75dp"
            android:layout_below="@+id/headerRegistr"
            app:srcCompat="@drawable/ic_baseline_contact_support_24"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="218dp"
            />

        <EditText
            android:id="@+id/street"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/kod"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:background="@drawable/dra4"
            android:textColorHint="#fff"
            android:gravity="center"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:hint="@string/street"
            />


        <EditText
            android:id="@+id/house"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/street"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:background="@drawable/dra4"
            android:textColorHint="#fff"
            android:gravity="center"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:hint="@string/house"
            />
        <EditText
            android:id="@+id/flat"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/house"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:background="@drawable/dra4"
            android:textColorHint="#fff"
            android:gravity="center"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:hint="@string/flat"
            />
        <EditText
            android:id="@+id/fio"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/flat"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:background="@drawable/dra4"
            android:textColorHint="#fff"
            android:gravity="center"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:hint="@string/fio"
            />
        <EditText
            android:id="@+id/passwordReg"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/fio"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:background="@drawable/dra4"
            android:textColorHint="#fff"
            android:gravity="center"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:hint="@string/passwordReg"
            />
        <EditText
            android:id="@+id/ConfirmPassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/passwordReg"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:background="@drawable/dra4"
            android:textColorHint="#fff"
            android:gravity="center"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:hint="@string/passwordConfirm"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/ConfirmPassword"
            android:layout_marginTop="21dp"
            android:hint="@string/email"
            android:textColor="#FFFFFF"
            android:background="@drawable/dra4"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:gravity="center"
            android:textColorHint="#fff"

            />





        <Button
            android:id="@+id/button2"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dra"
            android:onClick="formSubmit"
            android:text="Зарегестрироваться"

            android:textColor="#FFFFFF"
            android:textSize="14sp"
            />



    </RelativeLayout>

</LinearLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>