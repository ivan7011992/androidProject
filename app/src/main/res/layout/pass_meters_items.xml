<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".meters.activity.MainActivity">





        <TextView
            android:id="@+id/nomerUzel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Номер узла"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/nameUzel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomerUzel"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"
            android:text="Наименование прибора учета"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameUzelValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomerUzel"

            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_marginTop="5dp"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dataPassMeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameUzel"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"
            android:text="Дата передачи"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dataPassMetersValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameUzelValue"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/posledMeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataPassMeters"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"
            android:text="Последнее показание"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/posledMetersValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataPassMetersValue"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />



        <TextView
            android:id="@+id/pokaz"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#1A90D0"
            android:layout_below="@+id/posledMeters"
            android:text="Внести показания"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />

        <EditText
            android:id="@+id/userData"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/pokaz"
            android:padding="2dp"
            android:gravity="center"
            android:textSize="9sp"

            android:layout_centerHorizontal="true"
            android:hint="Введите показания"
        android:background="@drawable/dra10"

            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>