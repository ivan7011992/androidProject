<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
android:padding="0dp"
    app:cardCornerRadius="0dp"


    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <LinearLayout
            android:id="@+id/titlePass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dra12"

            android:gravity="center"

            >

                <TextView
                    android:id="@+id/nomerUzel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="4dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_medium"
                    android:text="№ узла:"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/nomerUzelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/nomerUzel"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Значение"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />



</LinearLayout>
    <RelativeLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="8dp"

        tools:context=".meters.activity.MainActivity">



        <TextView
            android:id="@+id/nameUzel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Наименование прибора учета"
            android:textSize="14sp"
           />

        <TextView
            android:id="@+id/nameUzelValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dataPassMeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameUzel"
            android:layout_marginTop="10dp"
            android:text="Дата передачи"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/dataPassMetersValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameUzelValue"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto_medium"
            android:text="Значение"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/posledMeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataPassMeters"
            android:layout_marginTop="10dp"
            android:text="Последнее показание"
            android:textSize="14sp"

         />

        <TextView
            android:id="@+id/posledMetersValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataPassMetersValue"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto_medium"
            android:text="Значение"
            android:textSize="14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/userData"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/posledMetersValue"
            android:padding="2dp"
            android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="14sp"

            android:layout_centerHorizontal="true"
            android:hint="Введите показания"
        android:background="@drawable/dra10"

            />


    </RelativeLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>