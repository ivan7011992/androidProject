<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".meters.activity.MainActivity"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:id="@+id/con3"


        >


        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_marginBottom="20dp"
            android:text="Оплата"
            android:gravity="center"
            android:textColor="#F9F8FB"
            android:background="@drawable/dra2"
            android:textAlignment="center"
           android:textSize="15sp"
            android:textStyle="bold" />




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/paymentMeters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="1dp"
            android:layout_marginBottom="20dp"
            android:scrollbars="vertical" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <Button
            android:id="@+id/paymentValue"
            android:layout_width="135dp"
            android:layout_height="55dp"
            android:background="@drawable/dra9"
            android:onClick="passMetersData"
            android:textColor="#F4EFEF"
                       android:text="Оплатить"
            android:textSize="8sp"

            android:layout_marginBottom="90dp"
            android:layout_centerHorizontal="true"

            />

</RelativeLayout>
    </LinearLayout>

</ScrollView>





