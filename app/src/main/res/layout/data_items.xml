<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".meters.activity.MainActivity">





        <TextView
            android:id="@+id/dateHistory"
            android:layout_width="match_parent"
            android:layout_height="45dp"
             android:layout_centerHorizontal="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Дата"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:background="@drawable/dra11"
            />

        <TextView
            android:id="@+id/datePassMeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateHistory"
            android:layout_marginTop="10dp"
            android:paddingRight="3dp"
            android:text="Долг на начало периода"
            android:textSize="11sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/saldoBeginValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateHistory"

            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_marginTop="10dp"
            android:textSize="9sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/nachisPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMeters"
            android:layout_marginTop="10dp"
            android:paddingRight="3dp"
            android:text="Начисление за период"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nachisPeriodValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMeters"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/oplataPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValue"
            android:layout_marginTop="10dp"
            android:paddingRight="3dp"
            android:text="Оплата за период"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/oplataPeriodValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValue"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriod"
            android:layout_marginTop="10dp"
            android:paddingRight="3dp"
            android:text="Долг на конец периода"
            android:textSize="11sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/deptValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriod"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:paddingRight="3dp"
            android:text="Значение"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/information"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textColor="#1A90D0"
            android:layout_below="@+id/deptValue"
            android:text="Подробнее"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"


            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>