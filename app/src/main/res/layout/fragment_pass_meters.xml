<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".meters.activity.MainActivity"
        android:orientation="vertical"

        android:id="@+id/parentPassMeters"


        >


        <TextView
            android:id="@+id/headerPassMeters"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="Передача показаний"
            android:background="@drawable/dra17"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="#000000"

           />

        <TextView
            android:id="@+id/noMeters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
          android:layout_margin="30dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textColor="#FF424F"
            />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/passMeters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"

                android:layout_marginBottom="20dp"
                android:scrollbars="vertical" />

      

        <RelativeLayout
            android:id="@+id/passButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <Button
                android:id="@+id/buttonPassMeters"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:background="@drawable/dra9"
                android:text="Внести показания"
                android:textColor="#F4EFEF"
                android:textSize="12dp" />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>

</androidx.core.widget.NestedScrollView>



