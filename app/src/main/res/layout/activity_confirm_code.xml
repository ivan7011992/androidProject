<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/RelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dra8"


    >

    <TextView
        android:id="@+id/headerRegistr"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:text="Подтверждение"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#000000"

        android:gravity="center"
        android:textSize="20dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"

    android:orientation="horizontal">

    <EditText
        android:id="@+id/digitOne"
        android:layout_width="20dp"
       android:layout_height="40dp"
        android:textSize="11dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/dra10"
        android:textColorHint="#000000"
        android:gravity="center"
        android:ems="10"
        android:textColor="#000000"

        />


    <EditText
        android:id="@+id/digitTwo"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:background="@drawable/dra10"
        android:textColorHint="#000000"
        android:gravity="center"
        android:ems="10"
        android:layout_marginRight="10dp"
        android:textColor="#000000"

        />

    <EditText
        android:id="@+id/digitThree"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:background="@drawable/dra10"
        android:textColorHint="#000000"
        android:gravity="center"
        android:ems="10"
        android:layout_marginRight="10dp"
        android:textColor="#000000"

        />

    <EditText
        android:id="@+id/digitFour"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:background="@drawable/dra10"
        android:textColorHint="#000000"
        android:gravity="center"
        android:ems="10"
        android:layout_marginRight="10dp"
        android:textColor="#000000"

        />





</LinearLayout>
    <Button
        android:id="@+id/changePawwordButton"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_below="@+id/confirmationPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/dra"
        android:onClick="formSubmit"
        android:text="ок"

        android:textColor="#2196F3"
        android:textSize="14dp"
        />


</LinearLayout>