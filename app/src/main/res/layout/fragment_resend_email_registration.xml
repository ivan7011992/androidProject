<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/RelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dra8"
    >




    <RelativeLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="5dp">




        <TextView
            android:id="@+id/registrationFinalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Проблемы с отправкой Email"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:textSize="14sp"
            android:gravity="center"
            />


            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingcloseDialogResent"
            android:layout_height="42dp"
            android:layout_width="39dp"
            app:fabSize="mini"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:clickable="true"
            app:backgroundTint="#FFF1F0F0"
            android:src="@drawable/ic_baseline_close_24" />

        <TextView
            android:id="@+id/textResentEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registrationFinalText"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:paddingRight="3dp"
            android:text="Если вам не пришло письмо на почту, то проверьте корректность введенных вами данных. Если почта указана неверно, у вас есть возможность изменить электронный адрес, указав новую почту в поле ниже"
            android:textColor="#000000"
            android:textSize="14sp" />



        <EditText
            android:id="@+id/editemailResent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textResentEmail"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:hint="Введите почту"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/buttonResentMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editemailResent"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Отправить повторно письмо с активацией"
            android:background="@drawable/dra9"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>


</LinearLayout>










