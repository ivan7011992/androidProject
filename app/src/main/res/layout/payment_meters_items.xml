<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="4dp"
    >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".meters.activity.MainActivity">


        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/dra11"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="Всего"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deptBeginPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"
            android:text="Долг на начало периода"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deptBeginPeriodValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_marginTop="5dp"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nachislPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deptBeginPeriod"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"
            android:text="Начисление за период"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nachisPeriodValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deptBeginPeriodValue"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/oplataPeriodPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachislPeriod"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"
            android:text="Оплата за период"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/oplataPeriodPaymentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValue"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/deptPeriodEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodPayment"
            android:layout_marginTop="5dp"
            android:paddingRight="3dp"
            android:text="Долг на конец периода"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deptPeriodValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodPaymentValue"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Значение"
            android:textSize="9sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/payment"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deptPeriodValue"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:paddingRight="3dp"
            android:text="Введите сумму"
            android:gravity="center"
            android:textSize="11sp"
            android:textStyle="bold" />

    </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>