<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:orientation="vertical"
        tools:context=".meters.activity.HistoryMetersFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dra2"
            android:gravity="center"
            android:text="История оплат"
            android:textAlignment="center"
            android:textColor="#F9F8FB"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_centerHorizontal="true"
            android:text="Выбор периода"
            android:textColor="#000000"
            />
</RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

            <Button
                android:id="@+id/dateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/dra"
                android:layout_marginLeft="50dp"

                android:text="Начало периода"
                android:textSize="12sp" />


            <Button
                android:id="@+id/endDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
       android:layout_toRightOf="@id/dateButton"
                android:background="@drawable/dra"
                android:onClick="endDate"
                android:text="Конец периода"
                android:textSize="12sp" />

            <Button
                android:id="@+id/applyPeriodButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@drawable/dra2"
                android:layout_marginRight="10dp"
                android:onClick="showData"
                     android:layout_toRightOf="@+id/endDateButton"
                android:padding="5dp"
                android:text="Применить"
                android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="1dp"
            android:layout_marginBottom="65dp"
            android:scrollbars="vertical" />


    </LinearLayout>

</LinearLayout>




