<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/RelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dra8"
    >



    <RelativeLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Подтверждение"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:textSize="20dp"
            android:gravity="center"

            />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingcloseConfirmDialog"
            android:scaleType="center"
            android:layout_width="39dp"
            app:fabSize="mini"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_marginRight="0dp"
            app:backgroundTint="#FFF1F0F0"
            android:background="@drawable/ic_baseline_close_8"
            app:srcCompat="@drawable/ic_baseline_close_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/confirmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm"
            android:layout_marginTop="15dp"
             android:padding="20dp"
            android:paddingRight="3dp"
            android:text="Почтовый ящик не подтверждён! Пожалуйста, проверте актуальность вашей почты и подтвердите  почтовый адрес"
            android:textSize="14dp"
          android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#FF424F"/>

        <TextView
            android:id="@+id/emailConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmText"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:hint="Введите почту"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailConfirm"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Подтвердить"
            android:background="@drawable/dra4"
            android:layout_marginTop="30dp"
            android:textColor="#03A9F4"
            android:textSize="16dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>




</LinearLayout>










