<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/RelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dra8"
    >




    <RelativeLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="5dp">




        <TextView
            android:id="@+id/registrationFinalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Подтверждение почты"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:textSize="14sp"
            android:gravity="center"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingcloseDialogSendMail"
            android:scaleType="center"
            android:layout_width="39dp"
            app:fabSize="mini"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_marginRight="0dp"
            app:backgroundTint="#FFF1F0F0"
            android:background="@drawable/ic_baseline_close_8"
            app:srcCompat="@drawable/ic_baseline_close_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/texSentEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registrationFinalText"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:paddingRight="3dp"
            android:text="Аккаунт не активирован. Подтвердите почту ivan701-1992@mail.ru"
            android:textColor="#000000"
            android:textSize="14sp" />




        <Button
            android:id="@+id/buttonSendMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texSentEmail"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Отправить письмо с кодом активации"
            android:background="@drawable/dra9"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>


</LinearLayout>










