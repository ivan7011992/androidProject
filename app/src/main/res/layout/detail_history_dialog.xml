<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dra17"

    >


    <TextView
        android:id="@+id/headingMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Месяц"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:textSize="18dp"
        android:gravity="center"
        android:background="@drawable/dra12"

        />

    <RelativeLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/vodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="3dp"
            android:text="Водоснабжение"
            android:textSize="20dp"

            android:textColor="#000000"/>

        <TextView
            android:id="@+id/datePassMetersVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vodosnab"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Долг на начало периода"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/saldoBeginValueVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vodosnab"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nachisPeriodVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMetersVodosnab"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"

            android:text="Начисление за период"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/nachisPeriodValueVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMetersVodosnab"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Значение"
            android:textSize="9dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/oplataPeriodVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValueVodosnab"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Оплата за период"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/oplataPeriodValueVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValueVodosnab"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/deptVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodVodosnab"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Долг на конец периода"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/deptValueVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodVodosnab"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/vodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deptVodosnab"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="3dp"
            android:text="Водоотведение"
            android:textSize="20dp"
            android:textColor="#000000"
          />

        <TextView
            android:id="@+id/datePassMetersVodootv"
            android:layout_width="wrap_content"
