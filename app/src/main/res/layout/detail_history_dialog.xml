            android:textSize="12dp" />

        <TextView
            android:id="@+id/nachisPeriodValueVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMetersVodootv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Значение"
            android:textSize="9dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/oplataPeriodVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValueVodootv"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Оплата за период"
