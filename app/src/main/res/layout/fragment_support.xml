<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meters.activity.SupportFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/headerRegistr"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:text="Задать вопрос"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="20sp"
            />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/headerRegistr"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
           android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:background="@drawable/dra10"
            android:textColorHint="#000000"
            android:gravity="center"
            android:ems="10"
            android:textColor="#000000"
            android:hint="Введите вопрос в произвольной форме"
            />







        <Button
            android:id="@+id/getMessegeSupport"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dra"

            android:text="ок"

            android:textColor="#2196F3"
            android:textSize="14sp"
            />



    </RelativeLayout>

</FrameLayout>