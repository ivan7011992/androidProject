<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/headerRegistr"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:text="Задать вопрос"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="20dp"
            />


        <EditText
            android:id="@+id/textSupport"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/headerRegistr"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
           android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:background="@drawable/dra10"
            android:textColorHint="#000000"
            android:gravity="center"
            android:maxLength="5000"
            android:textColor="#000000"
            android:hint="Введите вопрос в произвольной форме"
            />







        <Button
            android:id="@+id/getMessegeSupport"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textSupport"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dra15"

            android:text="Отправить"

            android:textColor="#2196F3"
            android:textSize="14dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/supportData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_below="@+id/getMessegeSupport"

            android:layout_marginBottom="20dp"
            android:scrollbars="vertical" />


    </RelativeLayout>

    </ScrollView>
</androidx.core.widget.NestedScrollView>