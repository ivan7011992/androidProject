<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/RelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/headingMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Выбор перелда дат "
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/dra12"

        />

    <RelativeLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/vodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="3dp"
            android:text="Водоснабжение"
            android:textSize="22sp"

            android:textColor="#000000"/>

        <TextView
            android:id="@+id/datePassMetersVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vodosnab"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Долг на начало периода"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/saldoBeginValueVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vodosnab"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="10sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nachisPeriodVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMetersVodosnab"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"

            android:text="Начисление за период"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nachisPeriodValueVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMetersVodosnab"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Значение"
            android:textSize="10sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/oplataPeriodVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValueVodosnab"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Оплата за период"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/oplataPeriodValueVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValueVodosnab"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/deptVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodVodosnab"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Долг на конец периода"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/deptValueVodosnab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodVodosnab"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/vodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deptVodosnab"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="3dp"
            android:text="Водоотведение"
            android:textSize="22sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/datePassMetersVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vodootv"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Долг на начало периода"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/saldoBeginValueVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vodootv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Значение"
            android:textSize="9sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nachisPeriodVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMetersVodootv"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="3dp"
            android:text="Начисление за период"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nachisPeriodValueVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMetersVodootv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/oplataPeriodVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValueVodootv"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Оплата за период"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/oplataPeriodValueVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValueVodootv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/deptVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodVodootv"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Долг на конец периода"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/deptValueVodootv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodVodootv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/odn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deptValueVodootv"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="3dp"
            android:text="ОДН"
            android:textSize="22sp"

            android:textColor="#000000"/>

        <TextView
            android:id="@+id/datePassMetersOdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/odn"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Долг на начало периода"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/saldoBeginValueOdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/odn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nachisPeriodOdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMetersOdn"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Начисление за период"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nachisPeriodValueOdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePassMetersOdn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/oplataPeriodOdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValueOdn"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Оплата за период"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/oplataPeriodValueOdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nachisPeriodValueOdn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/deptOdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodOdn"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"

            android:text="Долг на конец периода"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/deptValueOdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oplataPeriodOdn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingRight="5dp"
            android:text="Значение"
            android:textSize="9sp" />
        <TextView
            android:id="@+id/action_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deptValueOdn"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="OK"

            android:layout_marginTop="30dp"
            android:textColor="#1a90d0"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</LinearLayout>










