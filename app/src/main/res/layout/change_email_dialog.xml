<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/headerRegistr"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:text="Смена почты"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="20sp"
                />


            <EditText
                android:id="@+id/emailDialog"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/headerRegistr"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:background="@drawable/dra10"
                android:textColorHint="#000000"
                android:gravity="center"
                android:ems="10"
                android:textColor="#000000"
                android:hint="Введите email"
                />







            <Button
                android:id="@+id/changeemailButton"
                android:layout_width="310dp"
                android:layout_height="60dp"
                android:layout_below="@+id/emailDialog"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/dra"
                android:onClick="formSubmit"
                android:text="ок"

                android:textColor="#2196F3"
                android:textSize="14sp"
                />



        </RelativeLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>
