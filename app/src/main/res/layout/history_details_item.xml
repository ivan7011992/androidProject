<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    app:cardCornerRadius="0dp"


    >
    <LinearLayout
        android:id="@+id/passItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >





        </LinearLayout>
        <RelativeLayout
            android:id="@+id/con3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="8dp"

            tools:context=".meters.activity.MainActivity">



            <TextView
                android:id="@+id/VidUslugi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingRight="3dp"
                android:text="Услуга"
                android:textSize="20dp"

                android:textColor="#000000"/>

            <TextView
                android:id="@+id/saldoBegin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VidUslugi"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Долг на начало периода"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/saldoBeginValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VidUslugi"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingRight="5dp"
                android:text="Значение"
                android:textSize="9dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/nachisPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saldoBegin"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"

                android:text="Начисление за период"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/nachisPeriodValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saldoBeginValue"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Значение"
                android:textSize="9dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/oplataPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nachisPeriodValue"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Оплата за период"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/oplataPeriodValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nachisPeriodValue"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingRight="5dp"
                android:text="Значение"
                android:textSize="9dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oplataPeriod"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Долг на конец периода"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/deptValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oplataPeriod"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingRight="5dp"
                android:text="Значение"
                android:textSize="9dp"
                android:textStyle="bold" />




        </RelativeLayout>


</androidx.cardview.widget.CardView>